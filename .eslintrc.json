{
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended"
	],
	"rules": {
		"prefer-const": 2,
		"no-unused-vars": [
			2,
			{
				"vars": "all",
				"args": "none",
				"ignoreRestSiblings": true
			}
		],
		"no-var": 2,
		"one-var-declaration-per-line": 2,
		"indent": [
			"error",
			"tab",
			{
				"flatTernaryExpressions": true
			}
		],
		"space-infix-ops": 2,
		"keyword-spacing": 2,
		"space-before-blocks": 2,
		"key-spacing": 2
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"mocha": true,
		"jest": true
	},
	"ignorePatterns": [
		"/dist/**"
	]
}
